extends layout

block content
    <!-- Pagination -->
    <div class="pagination justify-content-center">
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4 shadow card p-4 m-5">
        <h3 class="p-2 text-center"><i class="fas fa-lock"></i> Login</h3>
        <form>
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
            <small id="emailHelp" class="form-text text-muted">Inform your e-mail address.</small>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="">
          </div>
          <div class="pagination justify-content-center">
            <button type="submit" class="btn btn-primary m-1"><i class="fas fa-lock-open"></i> Login</button>
            <button type="submit" class="btn btn-success m-1"><i class="fab fa-google"></i> Google</button>
            <button type="submit" class="btn btn-secondary m-1"><i class="fab fa-github"></i> Github</button>
          </div>
        </form>
      </div>
    </div>
